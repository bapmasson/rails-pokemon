<div class="container">
  <h1>Pokedex</h1>
  <%= link_to "Trainers", trainers_path %>
  <%= link_to "Random Pokemon", "#" %>

  <%= form_with(url: root_path, method: :get, class: "" ) do |f| %>
    <%= f.text_field :query, value: params[:query] %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>


  <% if @pokemons.empty? %>
    <p>No Pokemon found. Try searching for something else!</p>

  <% end %>


  <div class="row">
    <% @pokemons.each do |pokemon| %>
    <div class="col-3 my-3">
      <%= link_to pokemon_path(pokemon), style: "text-decoration: none;" do %>
      <div class="card">
        <%= cl_image_tag pokemon.photo.key, class: "card-img-top", alt: pokemon.name, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= pokemon.name %></h5>
          <p class="card-text"><%= pokemon.element_type %></p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

  </div>

</div>
